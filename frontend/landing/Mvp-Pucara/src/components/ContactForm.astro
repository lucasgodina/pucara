  input:-moz-autofill,
  input:-moz-autofill:hover,
  input:-moz-autofill:focus {
    background-color: rgba(0, 0, 0, 0.3) !important;
    color: #ffffff !important;
  }
  
  /* Forzar el estilo correcto para todos los estados */
  input[type="text"], 
  input[type="email"], 
  select, 
  textarea {
    background-color: rgba(0, 0, 0, 0.3) !important;
    color: #ffffff !important;
  }
  
  /* Estilo adicional para asegurar consistencia */
  input:autofill,
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  input:-webkit-autofill:active {
    -webkit-box-shadow: 0 0 0 1000px rgba(0, 0, 0, 0.3) inset !important;
    -webkit-text-fill-color: #ffffff !important;
    box-shadow: 0 0 0 1000px rgba(0, 0, 0, 0.3) inset !important;
    background-color: rgba(0, 0, 0, 0.3) !important;
  }
  
  /* Mejorar contraste de focus para accesibilidad */
  input:focus, select:focus, textarea:focus, button:focus {
    outline: 2px solid #ea601a;
    outline-offset: 2px;
  }

  /* Mejor indicador visual para elementos requeridos */
  label:has(+ input[required])::after,
  label:has(+ select[required])::after,
  label:has(+ textarea[required])::after {
    content: " *";
    color: #ea601a;
    font-weight: bold;
  }

  /* Animaciones para mensajes */
  #successMessage, #errorMessage {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
