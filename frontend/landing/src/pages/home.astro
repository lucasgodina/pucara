---
import Hero from '../components/hero.astro';
import Layout from '../layouts/Layout.astro';
import InstagramCarousel from '../components/InstagramCarousel.astro';
---
<Layout 
    title="Pucará Gaming - Inicio"
    description="Bienvenido a Pucara Gaming, la organización líder de esports en Argentina. Descubrí nuestros equipos de Dota 2, Street Fighter y más. Sumate a la comunidad gaming más apasionada del país."
    keywords="pucara gaming, esports argentina, gaming competitivo, dota 2 argentina, street fighter, gaming clan, esports team, buenos aires gaming"
>
    <Hero />

    <section class="relative overflow-hidden py-20 bg-gradient-to-br from-orange-500/10 via-transparent to-black/80 font-ubuntu">
        <!-- Decorative elements -->
        <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-gradient-radial from-orange-500/15 via-transparent to-transparent transform -rotate-45 pointer-events-none" aria-hidden="true"></div>
        <div class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-gradient-radial from-orange-500/5 via-transparent to-transparent transform rotate-45 pointer-events-none" aria-hidden="true"></div>
        
        <div class="container relative z-10 mx-auto px-4">
            <h2 class="text-4xl font-bold text-center text-white mb-8 uppercase tracking-wider relative">
                Últimas Novedades
                <span class="block w-24 h-1 bg-primary mx-auto mt-4 shadow-glow-orange" aria-hidden="true"></span>
            </h2>
            
            <!-- Carrusel de Instagram -->
            <InstagramCarousel autoPlay={true} autoPlayDelay={6000} />
        </div>
    </section>
    
    <script async src="//www.instagram.com/embed.js"></script>
</Layout>