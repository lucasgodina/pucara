        <!-- Loading overlay -->
        <div id="loading-overlay" class="fixed inset-0 bg-black/80 z-50 items-center justify-center" style="display: none;">
            <div class="text-center">
                <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-primary mx-auto mb-4"></div>
                <p class="text-light text-lg">Procesando tu compra...</p>
            </div>
        </div>
    </main>

    <script>
        // Filtrado de productos
        const filterButtons = document.querySelectorAll('.category-filter');
        const productCards = document.querySelectorAll('.product-card');

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                const category = button.getAttribute('data-category');
                
                // Update active button
                filterButtons.forEach(btn => {
                    btn.classList.remove('active', 'bg-primary/20', 'border-primary', 'text-primary');
                    btn.classList.add('bg-gray-800/50', 'border-gray-700', 'text-light/70');
                });
                button.classList.add('active', 'bg-primary/20', 'border-primary', 'text-primary');
                button.classList.remove('bg-gray-800/50', 'border-gray-700', 'text-light/70');

                // Filter products
                productCards.forEach(card => {
                    const productCategory = card.getAttribute('data-category');
                    const htmlCard = card as HTMLElement;
                    if (category === 'all' || productCategory === category) {
                        htmlCard.style.display = 'block';
                        setTimeout(() => {
                            htmlCard.style.opacity = '1';
                            htmlCard.style.transform = 'scale(1)';
                        }, 10);
                    } else {
                        htmlCard.style.opacity = '0';
                        htmlCard.style.transform = 'scale(0.9)';
                        setTimeout(() => {
                            htmlCard.style.display = 'none';
                        }, 300);
                    }
                });
            });
        });

        // Manejo de compras con Mercado Pago
        const buyButtons = document.querySelectorAll('.buy-button');
        const loadingOverlay = document.getElementById('loading-overlay');

        buyButtons.forEach(button => {
            button.addEventListener('click', async () => {
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');
                const productPrice = button.getAttribute('data-product-price');

                // Mostrar loading
                if (loadingOverlay) {
                    loadingOverlay.style.display = 'flex';
                }

                try {
                    // Llamar al endpoint de creaci√≥n de preferencia
                    const response = await fetch('/api/create-preference', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            productId,
                            productName,
                            productPrice: productPrice ? parseFloat(productPrice) : 0
                        })
                    });

                    const data = await response.json();

                    if (data.init_point) {
                        // Redirigir al checkout de Mercado Pago
                        window.location.href = data.init_point;
                    } else {
                        throw new Error('No se pudo crear la preferencia de pago');
                    }
                } catch (error) {
                    console.error('Error al procesar la compra:', error);
                    if (loadingOverlay) {
                        loadingOverlay.style.display = 'none';
                    }
                    alert('Hubo un error al procesar tu compra. Por favor, intenta nuevamente.');
                }
            });
        });

        // Animaciones de entrada
        document.addEventListener('DOMContentLoaded', () => {
            productCards.forEach((card, index) => {
                const htmlCard = card as HTMLElement;
                htmlCard.style.opacity = '0';
                htmlCard.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    htmlCard.style.transition = 'all 0.5s ease';
                    htmlCard.style.opacity = '1';
                    htmlCard.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .skip-link {
            position: absolute;
            left: -9999px;
            z-index: 999;
            padding: 1rem;
            background-color: #ea601a;
            color: white;
            text-decoration: none;
        }

        .skip-link:focus {
            left: 50%;
            transform: translateX(-50%);
            top: 1rem;
        }
    </style>
</Layout>
