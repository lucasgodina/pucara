---
import Layout from "../../layouts/Layout.astro";

const searchParams = Astro.url.searchParams;
const paymentId = searchParams.get('payment_id');
const status = searchParams.get('status');
---

<Layout 
    title="Pago Rechazado - Pucará Gaming"
    description="Hubo un problema con tu pago"
>
    <main class="font-ubuntu bg-dark text-light min-h-screen flex items-center justify-center pt-24 pb-12" role="main">
        <div class="container mx-auto px-4 max-w-2xl text-center">
            <!-- Icono de error -->
            <div class="mb-8 flex justify-center">
                <div class="w-24 h-24 bg-red-500/20 rounded-full flex items-center justify-center border-4 border-red-500">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" class="text-red-500">
                        <path d="M18 6L6 18M6 6l12 12"/>
                    </svg>
                </div>
            </div>

            <!-- Título -->
            <h1 class="text-4xl md:text-5xl font-bold mb-4">
                <span class="bg-gradient-to-r from-red-400 to-red-600 bg-clip-text text-transparent">
                    PAGO RECHAZADO
                </span>
            </h1>

            <p class="text-xl text-light/80 mb-8">
                No pudimos procesar tu pago
            </p>

            <!-- Motivos comunes -->
            <div class="bg-dark-subtle border border-red-500/30 rounded-lg p-6 mb-8 text-left">
                <h2 class="text-lg font-bold text-red-500 mb-4">Motivos comunes:</h2>
                <ul class="space-y-2 text-light/70">
                    <li class="flex items-start gap-2">
                        <span class="text-red-500 mt-1">•</span>
                        <span>Fondos insuficientes en tu cuenta</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-red-500 mt-1">•</span>
                        <span>Datos de tarjeta incorrectos</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-red-500 mt-1">•</span>
                        <span>Límite de compra excedido</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-red-500 mt-1">•</span>
                        <span>Problemas de seguridad con tu banco</span>
                    </li>
                </ul>
            </div>

            {paymentId && (
                <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-4 mb-8 text-sm text-light/70">
                    <p><strong class="text-light">ID de transacción:</strong> {paymentId}</p>
                    {status && <p><strong class="text-light">Estado:</strong> {status}</p>}
                </div>
            )}

            <!-- Botones de acción -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                    href="/store" 
                    class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary/80 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:scale-105"
                >
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 10h18M3 14h18m-9-4v8"/>
                    </svg>
                    Intentar nuevamente
                </a>
                <a 
                    href="/contact" 
                    class="inline-flex items-center justify-center gap-2 bg-gray-800 hover:bg-gray-700 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:scale-105"
                >
                    Contactar soporte
                </a>
            </div>

            <div class="mt-8 text-sm text-light/60">
                <a href="/home" class="text-primary hover:underline">Volver al inicio</a>
            </div>
        </div>
    </main>
</Layout>
