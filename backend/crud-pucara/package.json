    "prettier": "^3.5.3",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/validator": "^13.0.2",
    "@types/uuid": "^10.0.0",
    "@vinejs/vine": "^3.0.1",
    "better-sqlite3": "^11.10.0",
    "cloudinary": "^2.8.0",
