    "luxon": "^3.6.1",
    "pg": "^8.13.1",
    "pucara-monorepo": "file:../..",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "ts-node-maintained": "^10.9.6",
    "zod": "^4.1.12"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
